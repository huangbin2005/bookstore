<div class="page-header">
  <h1>图书管理</h1>
  <p id="notice"><%= notice %></p>
</div>

<dl class="dl-horizontal">
  <dt><strong>部门名:</strong></dt>
  <dd><%= @department.name %></dd>

  <dt><strong>简称:</strong></dt>
  <dd><%= @department.title %></dd>

  <dt><strong>说明:</strong></dt>
  <dd><%= @department.description %></dd>
</dl>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              departments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_department_path(@department), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              departments_path(@department),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>


