<h1>图书清单</h1>

<table>
  <tr>
    <th>书名</th>
    <th>ISBN</th>
    <th>图片</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.isbn %></td>
    <td>
      <%= image_tag book.picatt.url(:thumb) %>
    </td>
    <td><%= link_to '查看', book %></td>
    <td><%= link_to '编辑', edit_book_path(book) %></td>
    <td><%= link_to '删除', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path %>
