<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @book.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:isbn) %>:</strong></dt>
  <dd><%= @book.isbn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pic) %>:</strong></dt>
  <dd><%= @book.pic %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picatt_file_name) %>:</strong></dt>
  <dd><%= @book.picatt_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picatt_content_type) %>:</strong></dt>
  <dd><%= @book.picatt_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picatt_file_size) %>:</strong></dt>
  <dd><%= @book.picatt_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picatt_updated_at) %>:</strong></dt>
  <dd><%= @book.picatt_updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              book_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_book_path(@book), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              book_path(@book),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
