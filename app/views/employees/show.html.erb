<div class="page-header">
  <h1>人员管理</h1>
  <p id="notice"><%= notice %></p>
</div>

<dl class="dl-horizontal">
  <dt><strong>姓名:</strong></dt>
  <dd><%= @employee.name %></dd>

  <dt><strong>性别:</strong></dt>
  <dd>
    <% ["男", "女", "保密"].each_with_index do |content, index| %>
        <% if (index+1).to_s==@employee.gender then %>
            <%= content %>
        <% end %>
    <%end%>
  </dd>

  <dt><strong>部门:</strong></dt>
  <dd><%= @employee.department.name %></dd>
</dl>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employees_path(@employee),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>


