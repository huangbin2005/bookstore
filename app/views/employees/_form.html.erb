<%= form_for(@employee, :html => {:class => 'form-horizontal'}) do |f| %>
    <% if @employee.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
          <ul>
            <% @employee.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :gender, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :gender, [["男", 1], ["女", 2], ["保密", 3]], :class => 'select_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :department_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :department_id, Department.all.collect { |p| [p.name, p.id] }, :class => 'select_field' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>

<% end %>
