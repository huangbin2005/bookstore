<!DOCTYPE html>
<html>
<head>
  <title>Bookstore</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? -%>
    <%= current_user.email %> |
    <%= link_to '用户信息', edit_user_registration_path %> |
    <%= link_to '退出登录', destroy_user_session_path, :method => :delete %> |
    <br/>
    <%= link_to "部门管理", departments_path %>
    <%= link_to "人员管理", employees_path %>
    <%= link_to "书籍管理", books_path %>
    <%= link_to "书籍借阅", lendbooks_path %>
    <%= link_to "登录用户管理", users_path %>

<% end -%>

<% unless user_signed_in? -%>
    <%= link_to '注册', new_user_registration_path %> |
    <%= link_to '登录', new_user_session_path %>
<% end -%>




<%= yield %>

</body>
</html>
