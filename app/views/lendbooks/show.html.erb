<div class="page-header">
  <h1>借阅管理</h1>
  <p id="notice"><%= notice %></p>
</div>

<dl class="dl-horizontal">
  <dt><strong>借阅人:</strong></dt>
  <dd><%= @lendbook.employee.name %></dd>

  <dt><strong>借阅日期:</strong></dt>
  <dd> <%= @lendbook.date %></dd>

  <dt><strong>返还日期:</strong></dt>
  <dd><%= @lendbook.returndate %></dd>

  <dt><strong>返还日期:</strong></dt>
  <dd>
    <% ["借阅中", "已经返还", "丢失"].each_with_index do |content, index| %>
        <% if (index+1).to_s==@lendbook.status then %>
            <%= content %>
        <% end %>
    <%end%>
  </dd>
</dl>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lendbooks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lendbook_path(@lendbook), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lendbooks_path(@lendbook),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>


